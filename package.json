{
    "name": "grauity",
    "version": "1.0.0",
    "description": "",
    "keywords": [
        "Newton School",
        "Grauity",
        "GUI",
        "Design System",
        "React",
        "CSS"
    ],
    "homepage": "https://github.com/Newton-School/grauity#readme",
    "author": "Newton School/Praduman Goyal",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Newton-School/grauity.git"
    },
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/Newton-School/grauity/issues"
    },
    "engines": {
        "node": ">=16.16.0",
        "npm": ">=9.2.0"
    },
    "main": "dist/grauity.js",
    "files": [
        "ui",
        "dist"
    ],
    "type": "module",
    "types": "ui/index.d.ts",
    "scripts": {
        "build-code": "webpack --config webpack.config.js",
        "build-icons": "npm run build-icons:optimize && npm run build-icons:generate",
        "build-icons:optimize": "rimraf ./iconland/optimised/*.svg & svgo -q -p 8 -f ./iconland/seeds -o ./iconland/optimised",
        "build-icons:generate": "node ./scripts/generate-font-icons-from-optimised-svgs.js",
        "lint": "npm run lint:eslint -- .",
        "lint:fix": "npm run lint:eslint -- . --fix",
        "lint:eslint": "eslint --ignore-path .gitignore",
        "lint:eslint:fix": "eslint  --ignore-path .gitignore --fix",
        "lint:staged": "lint-staged",
        "prettify": "prettier --write"
    },
    "pre-commit": "lint:staged",
    "lint-staged": {
        "*.js": [
            "npm run prettify",
            "npm run lint:eslint:fix"
        ],
        "*.ts": [
            "npm run prettify",
            "npm run lint:eslint:fix"
        ],
        "*.json": "npm run prettify"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "babel-eslint": "^10.1.0",
        "css-loader": "^6.7.3",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.6.0",
        "fantasticon": "^2.0.0",
        "lint-staged": "^13.1.0",
        "mini-css-extract-plugin": "^2.7.2",
        "path": "^0.12.7",
        "pre-commit": "^1.2.2",
        "prettier": "2.8.1",
        "rimraf": "^3.0.2",
        "sass": "^1.57.1",
        "sass-loader": "^13.2.0",
        "scss": "^0.2.4",
        "style-loader": "^3.3.1",
        "svgo": "^3.0.2",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    }
}
