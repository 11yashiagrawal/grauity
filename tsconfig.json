{
    // Change this to match your project
    "include": ["ui/**/*"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist/",
        "declarationMap": true,
        "skipLibCheck": true,
        "noEmit": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true
    }
}
